{
  "name": "world-travel-app",
  "version": "1.0.0",
  "description": "세계 여행 앱 - 여행 일정 관리 및 세계지도 시각화",
  "main": "index.html",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "dev:server": "npx live-server --port=3000 --open=/ --watch=.",
    "build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "build:prod": "npm run build && echo 'Production build completed!'",
    "start": "npm run build && npx live-server --port=3000 --open=/"
  },
  "keywords": [
    "travel",
    "world-map",
    "leaflet",
    "tailwindcss",
    "javascript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "live-server": "^1.2.2"
  },
  "dependencies": {}
}
